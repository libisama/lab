#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int n, k, t;
    cout << "Введите целое число в диапазоне 1-365." << endl;
    cin >> k;
    cout << "Введите целое число в диапазоне 1-7." << endl;
    cin >> n;
    t = k % 7 + (n - 1);
    t = t % 7;
    cout << "Номер дня недели - " << t << "." << endl;
    return 0;
}
