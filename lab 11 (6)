#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int a;
    cout << "Введите целое число, лежащее в диапазоне 1-999." << endl;
    cin >> a;

    if ((a < 10) && (a % 2 == 0)) { cout << "Это четное однозначное число." << endl; }
    if ((a < 10) && (a % 2 != 0)) { cout << "Это нечетное однозначное число." << endl; }
    if ((a > 9) && (a < 100) && (a % 2 == 0)) { cout << "Это четное двузначное число." << endl; }
    if ((a > 9) && (a < 100) && (a % 2 != 0)) { cout << "Это нечетное двузначное число." << endl; }
    if ((a > 99) && (a % 2 == 0)) { cout << "Это четное трехзначное число." << endl; }
    if ((a > 99) && (a % 2 != 0)) { cout << "Это нечетное трехзначное число." << endl; }
    
    return 0;
}
