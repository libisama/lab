#include <iostream>

using namespace std;

int main()
{
    {setlocale(LC_ALL, "Russian");
    float a, i, b;
    cout << "Введите ценy 1 кг конфет (вещественное число)." << endl;
    cin >> a;

    for (i = 0.1; i < 1.1; i = i + 0.1) {
        b = a * i;
        cout << "Стоимость " << i << " кг конфет - " << b << "." << endl;
        
    }cout << " " << endl;}

    {
        setlocale(LC_ALL, "Russian");
        int n, i;
        float s(1), a(1.1);
        cout << "Введите целое положительное число." << endl;
        cin >> n;

        for (i = 1; i < n + 1; i++) {
            s = s * a;
            a = a + 0.1;
        }
        cout << "Произведение равно " << s << "." << endl;
        cout << " " << endl;
    }
    
    {
        setlocale(LC_ALL, "Russian");
        int n, i;
        float s(0), a(1.1);
        cout << "Введите целое положительное число." << endl;
        cin >> n;

        for (i = 1; i < 2 * n; i = i + 2) {
            s = s + i;
            cout << s << endl;
        }

        cout << "Квадрат этого числа равен " << s << "." << endl;
        cout << " " << endl;
    }

    {
        setlocale(LC_ALL, "Russian");
        int n, i;
        float s(1), a;
        cout << "Введите вещественное число и целое положительное число." << endl;
        cin >> a >> n;

        for (i = 1; i < n + 1; i++) {
            s = s + pow(a, i);
        }

        cout << "Сумма равна " << s << "." << endl;
        cout << " " << endl;
    }

    {
        setlocale(LC_ALL, "Russian");
        int n, i;
        float s(1), a;
        cout << "Введите вещественное число и целое положительное число." << endl;
        cin >> a >> n;

        for (i = 1; i < n + 1; i++) {
            if (i % 2 == 0) { s = s + pow(a, i); }
            else { s = s - pow(a, i); }
        }

        cout << "Значение выражения равно " << s << "." << endl;
        cout << " " << endl;
    }
    return 0;
}
