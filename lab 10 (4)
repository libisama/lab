#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int a, b, c, d;
    cout << "Введите трехзначное число." << endl;
    cin >> a;

    b = a % 10;
    c = (a % 100 - b)/10;
    d = a / 100;

    if (((c>b) && (d>c)) || ((d<c) && (c<b))) { cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' истинно." << endl;
}
    else { cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' ложно." << endl; }

    return 0;
}
