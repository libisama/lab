#include <iostream>

using namespace std; 

int main()
{
    setlocale(LC_ALL, "Russian");
    float a, b, sum, ras, pr, mod;
    cout << "Введите два ненулевых числа." << endl;
    cin >> a >> b;
    sum = a + b;
    ras = a - b;
    pr = a * b;
    mod = abs(a) / abs(b);
    cout << "Сумма чисел равна " << sum << "." << endl;
    cout << "Разность чисел равна " << ras << "." << endl;
    cout << "Произведение чисел равно " << pr << "." << endl;
    cout << "Частное модулей этих чисел равно " << mod << "." << endl;

    return 0;
}
