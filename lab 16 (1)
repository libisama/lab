#include <iostream>

using namespace std;

int main()
{
    {
        setlocale(LC_ALL, "Russian");

        int n;
        cout << "Введите размер массива." << endl;
        cin >> n;
        int* mas = new int[n];
        for (int i = 0; i < n; i++) {
            mas[i] = (i * 2) + 1;
            cout << mas[i] << " ";

        } }
       

    return 0;
}
