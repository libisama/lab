#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    float x1, x2, y1, y2, r;
    cout << "Введите координаты (x и y) двух точек." << endl;
    cout << "x1 = ";
    cin >> x1;
    cout << "y1 = ";
    cin >> y1; 
    cout << "x2 = ";
    cin >> x2; 
    cout << "y2 = ";
    cin >> y2;
    r = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));
        cout << "Расстояние между двумя точками равно " << r << "." << endl;

    return 0;
}
