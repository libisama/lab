#include <iostream>

using namespace std; 

int main()
{
    setlocale(LC_ALL, "Russian");
    float a, b, sr;
    cout << "Введите два числа." << endl;
    cin >> a;
    cin >> b;
    sr = (a + b) / 2;
    cout << "Среднее арифметическое этих двух чисел равно " << sr << "." << endl;

    return 0;
}
