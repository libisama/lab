#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int a, b, c, e, d;
    cout << "Введите четырехзначное число." << endl;
    cin >> a;

    b = a / 100;
    c = a % 100;
    d = c % 10;
    e = c / 10;
    c = d * 10 + e;

    if (b==c) { cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' истинно." << endl;
}
    else { cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' ложно." << endl; }

    return 0;
}
