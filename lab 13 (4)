#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int n, i;
    float s(1), a;
    cout << "Введите вещественное число и целое положительное число." << endl;
    cin >> a >> n;

    for (i = 1; i < n + 1; i++) {
        s = s + pow (a, i);
    }

    cout << "Сумма равна " << s << "." << endl;
    return 0;
}
