#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int n, k(0), s(0);
    cout << "Введите целое число N (> 1)." << endl;
    cin >> n;

    while (s < n) {
        k++;
        s = s + k;
    }

    cout << "Число К равно " << k << " ." << endl;
    return 0;
}
